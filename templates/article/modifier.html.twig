{% extends 'base.html.twig' %}

{% block title %}Modifier l'article{% endblock %}

{% block body %}
<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">Modifier l'article</h1>
            
            <!-- Formulaire de modification -->
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_row(form.titre) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.texte) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.publie) }}
                </div>

                <div class="form-group">
                    {{ form_row(form.brochure) }}
                </div>

                <div class="form-group">
                    {{ form_row(form.date) }}
                </div>

                <div class="form-group">
                    {{ form_row(form.save) }}
                </div>
            {{ form_end(form) }}

            <!-- Lien pour revenir à la liste des articles -->
            <div class="mt-3">
                <a href="{{ path('app_article_liste') }}" class="btn btn-secondary">Retour à la liste des articles</a>
            </div>
        </div>
    </main>
</div>
{% endblock %}
